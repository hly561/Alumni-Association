.message-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.message-container {
  padding: 24rpx;
  padding-top: 88rpx;
}

.message-list {
  background-color: #fff;
  border-radius: 16rpx;
}

.message-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.message-item:last-child {
  border-bottom: none;
}

.message-content {
  flex: 1;
  margin-left: 24rpx;
}

.message-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.time {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
  flex-shrink: 0;
}

.message-text {
  font-size: 28rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  white-space: normal;
  word-wrap: break-word;
}