.page {
  background-color: #fff;
  height: 100vh;
  padding-top: 320rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.header {
  position: fixed;
  top: 140rpx;
  left: 0;
  right: 0;
  z-index: 101;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-button {
  position: absolute;
  left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  color: #333;
}

.search-box {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 220rpx 20rpx 20rpx;
  background-color: #f8f8f8;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  height: 320rpx;
  box-sizing: border-box;
}

.nav-back {
  position: fixed;
  top: 48rpx;
  left: 20rpx;
  z-index: 101;
  padding: 8rpx;
}

.nav-back-icon {
  width: 48rpx;
  height: 48rpx;
}

.page-title {
  position: fixed;
  top: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 101;
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  line-height: 64rpx;
}

.search-input {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 16rpx 16rpx 16rpx 60rpx;
  font-size: 28rpx;
  position: relative;
}

.search-icon {
  position: absolute;
  left: 30rpx;
  top: 80%;
  transform: translateY(-50%);
  color: #999;
  z-index: 101;
  font-size: 24rpx;
}

.clear-icon {
  position: absolute;
  right: 40rpx;
  top: 80%;
  transform: translateY(-50%);
  color: #999;
  z-index: 101;
  font-size: 24rpx;
}

.location {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid rgb(238, 238, 238);
}

.location-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.location-city {
  font-size: 32rpx;
  color: #333;
}

.hot-cities {
  padding: 30rpx 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.city-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  margin-right: 60rpx;
}

.city-item {
  background-color: #fff;
  padding: 16rpx 0;
  text-align: center;
  border-radius: 8rpx;
  font-size: 26rpx;
  border: 1rpx solid #e0e0e0;
}

.content {
  flex: 1;
  height: calc(100vh - 280rpx);
}

.city-list {
  padding: 0 20rpx 0 20rpx;
  margin-right: 60rpx;
}

.city-section {
  margin-bottom: 30rpx;
}

.city-section-title {
  padding: 10rpx 10rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f0f0f0;
  border-radius: 6rpx;
}

.city-section-item {
  padding: 20rpx 0;
  font-size: 32rpx;
  border-bottom: 1rpx solid #eee;
}

/* 搜索结果样式 */
.search-result {
  padding: 20rpx;
  margin-right: 60rpx;
}

.no-result {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 字母索引栏样式 */
.letter-index {
  position: fixed;
  right: 20rpx;
  top: 59%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  background-color: rgba(255, 255, 255, 0.8);
  padding: 10rpx 0;
  border-radius: 30rpx;
  z-index: 999;
}

.letter-item {
  padding: 4rpx 5rpx;
  font-size: 24rpx;
  color: #00000081;
  text-align: center;
}