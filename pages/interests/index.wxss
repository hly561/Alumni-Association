page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.interest-tip {
  background-color: #fff;
  padding: 24rpx 30rpx;
  margin: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.interest-form {
  margin: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.category-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #333;
  position: relative;
  padding-left: 20rpx;
}

.category-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background-color: #1a73e8;
  border-radius: 4rpx;
}

.options-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.option-tag {
  padding: 12rpx 24rpx;
  border: 1rpx solid #eee;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #f8f8f8;
  transition: all 0.3s ease;
}

.option-tag.selected {
  background-color: #1a73e8;
  color: #fff;
  border-color: #1a73e8;
  box-shadow: 0 4rpx 8rpx rgba(26, 115, 232, 0.2);
}

.option-tag:active {
  transform: scale(0.95);
}