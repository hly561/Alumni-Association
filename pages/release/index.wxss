.page {
  padding: 0 32rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 160rpx);
  background-color: #f5f5f5;
}

.release-container {
  margin-top: 20rpx;
}

.panel-item {
  margin-bottom: 32rpx;
}

/* 移除单选按钮边框 */
.t-radio__border {
  border: none !important;
}

.t-radio__icon {
  border: none !important;
}

/* 报名人数上限样式 */
.stepper-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 32rpx;
}

.stepper-label {
  font-size: 28rpx;
  color: #333;
}

/* 单选按钮组样式 */
.t-radio-group {
  display: flex;
  justify-content: flex-start;
  gap: 32rpx;
  flex-direction: row;
  width: 100%;
}

/* 报名限制单选按钮组样式 */
t-cell[title="报名限制"] .t-radio-group {
  margin-left: 32rpx;
}

/* 活动介绍文本框样式 */
.t-textarea .t-textarea__wrapper-inner {
  font-size: 28rpx;
}

/* 上传组件样式 */
.upload-wrapper {
  background-color: white;
  padding: 32rpx;
  margin-top: 20rpx;
  margin-bottom: 32rpx;
  border-radius: 12rpx;
}

.upload-wrapper .title {
  margin-bottom: 32rpx;
  font-size: 28rpx;
  color: #333;
}

/* 群聊二维码上传样式 */
.qrcode-upload-container {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
}

.qrcode-upload-container .t-upload {
  width: 160rpx;
  height: 160rpx;
}

/* 提交按钮样式 */
.submit-btn {
  margin-top: 48rpx;
  margin-bottom: 48rpx;
  width: 90% !important;
  margin-left: auto;
  margin-right: auto;
}

/* 城市选择器样式 */
.city-picker {
  background-color: #ffffff;
  border-radius: 16rpx 16rpx 0 0;
  overflow: hidden;
}

.city-picker__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #e7e7e7;
}

.city-picker__title {
  font-size: 32rpx;
  font-weight: 500;
}

.city-picker__cancel, .city-picker__confirm {
  font-size: 28rpx;
  padding: 8rpx;
}

.city-picker__cancel {
  color: #999999;
}

.city-picker__confirm {
  color: #0052d9;
}

.city-picker__content {
  max-height: 70vh;
  padding: 0;
}

