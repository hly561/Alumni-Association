.letter-dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.letter-text {
  background: white;
  color: #1296DB;
  font-size: 100rpx;
  font-weight: bold;
  width: 150rpx;
  padding: 30rpx 0;
  text-align: center;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.2);
}